<!-- grid container -->
<div class="grid grid-cols-1 gap-4">
  <!-- Room name block -->
  <div class="col-span-1">
    <%= @room.name %>
  </div>
  <!-- search bar block -->
  <div class="flex justify-center col-span-1">
    <form id="search-form" class="search-form flex items-center border-b border-b-2 border-teal-500 py-2 w-1/2">
